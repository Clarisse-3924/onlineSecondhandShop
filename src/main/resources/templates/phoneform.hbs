{{#partial "content"}}

    <form action="/phone/new" method="post" id="colors">
        <h3>Add Phone</h3>
        <div class="form-group">
            <label for="pname">Product Name:</label><br>
            <input class="form-control" id="pname" name="pname" type="text"><br>
        </div>
        <div class="form-group">
            <label for="description"> Description:</label><br>
            <textarea class="form-control" id="description" name="description" type="text" rows="3"></textarea><br>
        </div>
        <div class="form-group">
            <label for="price">Price:</label><br>
            <input class="form-control" id="price" name="price" type="number"><br>
        </div>
        <div class="form-group">
            <label for="image">Image:</label><br>
            <input class="form-control" id="image" name="image" type="file"><br>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">add</button>
        </div>
    </form>
{{/partial}}
