{{#partial "content"}}

    <form action="/buy" method="post" id="colors">
        <h3>Order your Products!!!</h3>
        <div class="form-group">
            <label for="name">Customer Name:</label><br>
            <input class="form-control" id="name" name="name" type="text"><br>
        </div>
        <div class="form-group">
            <label for="location"> Location:</label><br>
            <textarea class="form-control" id="location" name="location" type="text" rows="3"></textarea><br>
        </div>
        <div class="form-group">
            <label for="phonenumber">Phone number:</label><br>
            <input class="form-control" id="phonenumber" name="phonenumber" type="text"><br>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Order</button>
        </div>
    </form>
{{/partial}}
